{
  "version": 2,
  "builds": [
    {
      "src": "serverbrow/serverbrow.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static",
      "config": { "distDir": "dist" } // Vite build çıktısı
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "serverbrow/serverbrow.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1" // Frontend’i yönlendir
    }
  ]
}
